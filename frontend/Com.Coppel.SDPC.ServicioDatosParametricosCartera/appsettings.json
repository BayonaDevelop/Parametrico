	"FOREIGN_NETWORK": true,
	"ASPNETCORE_ENVIRONMENT": "1",
	"Logging": {
		"LogLevel": {
			"Default": "Debug"
		},
		"NLog": {
			"IncludeScopes": true,
			"RemoveLoggerFactoryFilter": true
		}
	},
	"NLog": {
		"autoReload": true,
		"throwConfigExceptions": true,
		"internalLogLevel": "Info",
		"extensions": [
			{ "assembly": "NLog.Extensions.Logging" },
			{ "assembly": "NLog.Web.AspNetCore" }
		],
		"variables": {
			"label": "log"
		},
		"targets": {
			"fileLog": {
				"type": "File",
				"encoding": "UTF-8",
				"layout": "${date}|${level:uppercase=true}|${message}",
				"keepFileOpen": "false",
				"fileName": "archivos/logs/${label}-${shortdate}.log"
			},
			"fileJson": {
				"type": "File",
				"encoding": "UTF-8",
				"concurrentWrites": "true",
				"autoFlush": "true",
				"keepFileOpen": "false",
				"fileName": "archivos/logs/${label}-${shortdate}.json",
				"layout": {
					"type": "JsonLayout",
					"includeAllProperties": "true",
					"Attributes": [
						{
							"name": "Time",
							"layout": "${longdate}"
						},
						{
							"name": "Logger",
							"layout": "${logger}"
						},
						{
							"name": "Level",
							"layout": "${level}"
						},
						{
							"name": "Message",
							"layout": "${message}"
						},
						{
							"name": "Exception",
							"layout": "${exception}"
						},
						{
							"name": "StackTrace",
							"layout": "${StackTrace}"
						}
					]
				}
			},
			"console": {
				"type": "ColoredConsole",
				"useDefaultRowHighlightingRules": "false",
				"layout": "${date}|${level:uppercase=true}|${message}",
				"rowHighlightingRules": [
					{
						"condition": "level == LogLevel.Debug",
						"foregroundColor": "DarkGray"
					},
					{
						"condition": "level == LogLevel.Info",
						"foregroundColor": "DarkGreen"
					},
					{
						"condition": "level == LogLevel.Warn",
						"foregroundColor": "Yellow"
					},
					{
						"condition": "level == LogLevel.Error",
						"foregroundColor": "Red"
					},
					{
						"condition": "level == LogLevel.Fatal",
						"foregroundColor": "Red",
						"backgroundColor": "White"
					}
				]
			}
		},
		"rules": [
			{
				"logger": "*",
				"minLevel": "Trace",
				"levels": "info,warn,error",
				"writeTo": "fileLog"
			},
			{
				"logger": "*",
				"minLevel": "Trace",
				"levels": "info,warn,error",
				"writeTo": "fileJson"
			},
			{
				"logger": "*",
				"minLevel": "Trace",
				"levels": "debug,info,warn,error,fatal",
				"writeTo": "console"
			}
		]
	}
}
